---
import type { lenguages } from "@/i18n/ui";
import Layout from "@/layouts/Layout.astro";
import { useTranslation } from "@/lib/utils";
import AboutCard from "@/components/common/AboutCard.astro";
import { Image } from "astro:assets";

import read from "@/assets/read.webp";
import refuge from "@/assets/refuge.webp";
import mate from "@/assets/mate.webp";
import games from "@/assets/games.webp";
import gym from "@/assets/gym.webp";

const currentLang = Astro.currentLocale || "en";
const t = useTranslation(currentLang as keyof typeof lenguages);

const workAreas = [
  {
    icon: "computer",
    title: t("about.areas.fullstack.title"),
    description: t("about.areas.fullstack.description"),
  },
  {
    icon: "uxui",
    title: t("about.areas.design.title"),
    description: t("about.areas.design.description"),
  },
  {
    icon: "sparkles",
    title: t("about.areas.learning.title"),
    description: t("about.areas.learning.description"),
  },
  {
    icon: "setting",
    title: t("about.areas.optimization.title"),
    description: t("about.areas.optimization.description"),
  },
];

const hobbies = [
  { img: read, title: t("about.hobbies.read") },
  { img: refuge, title: t("about.hobbies.refuge") },
  { img: mate, title: t("about.hobbies.mate") },
  { img: games, title: t("about.hobbies.games") },
  { img: gym, title: t("about.hobbies.gym") },
];
---

<Layout title={t("navbar.about.title")}>
  <main
    transition:name="transition"
    transition:animate="fade"
    class="max-w-6xl mx-auto"
  >
    <article class="mt-8 space-y-6 px-4 pb-16">
      <header class="space-y-4">
        <h1 class="text-3xl md:text-6xl font-titan-one">
          {t("about.greeting")}<span class="text-terciary">!</span>
        </h1>
        <p class="text-lg leading-relaxed">
          {t("about.intro.paragraph1")}
        </p>
        <div class="space-y-3">
          <div class="space-y-1">
            <h3 class="text-xl md:text-2xl font-titan-one text-terciary">
              {t("about.intro.title2")}
            </h3>
            <p class="text-base text-muted-foreground leading-relaxed">
              {t("about.intro.paragraph2")}
            </p>
          </div>
          <div class="space-y-1">
            <h3 class="text-xl md:text-2xl font-titan-one text-terciary">
              {t("about.intro.title3")}
            </h3>
            <p class="text-base text-muted-foreground leading-relaxed">
              {t("about.intro.paragraph3")}
            </p>
          </div>
        </div>
      </header>
      <div class="space-y-4">
        <h4 class="text-xl md:text-2xl font-titan-one">Hobbbies</h4>
        <div
          class="grid grid-cols-3 md:grid-cols-5 lg:grid-cols-12 gap-y-8 sm:gap-3"
        >
          {
            hobbies.map((hob) => (
              <div class="flex flex-col space-y-1 items-center">
                <Image
                  src={hob.img}
                  alt="hobbie"
                  class="w-16 sm:w-20 h-auto object-contain"
                />
                <span class="font-titan-one uppercase text-xs sm:text-sm text-center">
                  {hob.title}
                </span>
              </div>
            ))
          }
        </div>
      </div>
      <section class="space-y-6 pt-8">
        <div class="flex items-center gap-3">
          <span class="w-2 h-8 bg-terciary rounded-full"></span>
          <h4 class="text-3xl md:text-4xl font-titan-one">
            {t("about.areas.title")}
          </h4>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {
            workAreas.map((area) => (
              <AboutCard
                title={area.title}
                description={area.description}
                iconPath={area.icon}
              />
            ))
          }
        </div>
      </section>
    </article>
  </main>
</Layout>
