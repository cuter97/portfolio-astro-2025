---
import { Icon } from "astro-icon/components";

// Props opcionales para reutilizar el componente
const {
  title = "Beginner Class",
  description = "For those of you who are just learning design",
  iconPath = "computer",
} = Astro.props;
---

<div
  class="relative w-full min-h-48"
  style="
    --card-color: var(--cream);
    --pillar-size: 34px;
    --big-circle-r: 38px;
    --circle-r: 24px;
    --circle-d: calc(var(--circle-r) * 2);
    --circles-space: calc(var(--big-circle-r) + var(--pillar-size));
    --circle-extend-inset: calc(var(--circle-r) + var(--circles-space));
    
    filter: drop-shadow(var(--background));
    border-radius: 24px 0 24px 24px;
    background: 
      radial-gradient(
        circle at 100% 0%,
        transparent var(--big-circle-r),
        var(--card-color) calc(var(--big-circle-r) + 1px)
      ) 0px var(--pillar-size) / calc(100% - var(--pillar-size)) 100% no-repeat,
      radial-gradient(
        circle closest-side,
        var(--card-color) 100%,
        transparent calc(100% + 1px)
      ) calc(100% - var(--circles-space)) 0 / var(--circle-d) var(--circle-d) no-repeat,
      radial-gradient(
        circle closest-side,
        var(--card-color) 100%,
        transparent calc(100% + 1px)
      ) 100% var(--circles-space) / var(--circle-d) var(--circle-d) no-repeat,
      linear-gradient(0deg, var(--card-color) 100%, var(--card-color) 100%) 0px
        var(--circle-r) / calc(100% - var(--circles-space))
        calc(100% - var(--circle-r)) no-repeat,
      linear-gradient(0deg, var(--card-color) 100%, var(--card-color) 100%) 0px
        0px / calc(100% - var(--circle-extend-inset)) var(--circle-d) no-repeat,
      linear-gradient(0deg, var(--card-color) 100%, var(--card-color) 100%) 100%
        var(--circle-extend-inset) / var(--circle-d) 100% no-repeat,
      linear-gradient(0deg, var(--card-color) 100%, var(--card-color) 100%) 0
        var(--circles-space) / calc(100% - var(--circle-r)) 100% no-repeat;
  "
>
  <div
    class={`absolute top-0 right-0 w-17 h-17 bg-terciary text-black rounded-full flex items-center justify-center`}
  >
    <Icon name={iconPath} size={38} />
  </div>

  <div class="p-6 h-full flex flex-col">
    <div class="mb-4 ">
      <h3 class="text-2xl font-bold text-popover mb-6 break-words max-w-[calc(100%-5rem)]">{title}</h3>
      <p class="leading-relaxed text-popover break-words">
        {description}
      </p>
    </div>
  </div>
</div>
